<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/fondo1"
        android:layout_width="413dp"
        android:layout_height="579dp"
        android:layout_marginTop="85dp"

        android:minHeight="650dp"
        android:orientation="vertical"
        android:padding="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="589dp"
            android:background="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_marginTop="70dp"
                android:layout_marginStart="21dp"
                android:layout_marginEnd="21dp"
                android:textSize="17sp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/ayuda_dos_mitades" />
                <EditText
                    android:id="@+id/cadena"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:hint="@string/cadena"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:background="@drawable/edit_text_background"
                    android:padding="12dp"
                    android:textSize="18sp"/>

                <Button
                    android:id="@+id/solucionar"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="120sp"
                    android:layout_width="150dp"
                    android:layout_height="62dp"
                    android:text="Solucionar"
                    android:textColor="@android:color/black"
                    android:backgroundTint="#00C896"/>

                <TextView
                    android:id="@+id/resultado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:layout_marginStart="135sp"/>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="144dp"
        android:layout_marginTop="24dp"
        android:text="Dos mitades"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>